<apex:page sidebar="false" showHeader="false" showChat="false" controller="LoginPageController">
    <meta name="viewport" content="width=device-width, initial-scale=2.0"/>   
    <c:importvisualstrap /> 
    <c:visualstrapblock >
        <apex:outputPanel styleClass="navbar navbar-inverse navbar-fixed-top" layout="block" html-role="navigation">
            <apex:outputPanel styleClass="container" layout="block">
                <apex:outputPanel styleClass="navbar-collapse collapse" layout="block">
                    <apex:form styleClass="navbar-form navbar-right">
                        <apex:outputPanel styleClass="form-group" layout="block">
                            <apex:inputText value="{!userName}" html-placeholder="Email" styleClass="form-control" />
                        </apex:outputPanel>
                        <apex:outputPanel styleClass="form-group" layout="block">
                            <apex:inputSecret value="{!password}" html-placeholder="Password" styleClass="form-control" />
                        </apex:outputPanel>
                        &nbsp;
                        <apex:commandButton value="Sign In" action="{!login}" styleClass="btn btn-success"/>
                        &nbsp;
                        <!--<apex:commandButton value="Sign Up" action="{!login}" styleClass="btn btn-primary"/>-->
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">Sign Up</button>
                           
                       
                    </apex:form>
                    
                </apex:outputPanel>
            </apex:outputPanel>
        </apex:outputPanel>
       <div id="myCarousel" class="carousel slide carousel-fade">
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li> 
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2" ></li>
                <li data-target="#myCarousel" data-slide-to="3" ></li>  
            </ol>
           
          <div class="carousel-inner" role="listbox">
            <div class="item active">
              <img src="{!URLFOR($Resource.Images, 'Images/01.jpg')}" alt="Mountain" width="100%"/>
              <div class="carousel-caption">
                <h3>Mountain</h3>
                <p>Rise High</p>
              </div>
            </div>
          
            <div class="item">
              <img src="{!URLFOR($Resource.Images, 'Images/02.jpg')}" alt="Sea" width="100%"/>
              <div class="carousel-caption">
                <h3>Sea</h3>
                <p>Wave in Mind </p>
              </div>
            </div>
            
             <div class="item">
              <img src="{!URLFOR($Resource.Images, 'Images/03.jpg')}" alt="Fresh Air" width="100%"/>
              <div class="carousel-caption">
                <h3>Fresh Air</h3>
                <p>Look and feel</p>
              </div>
            </div>
             <div class="item">
              <img src="{!URLFOR($Resource.Images, 'Images/04.jpg')}" alt="Forest" width="100%"/>
              <div class="carousel-caption">
                <h3>Forest</h3>
                <p>Going to Hide</p>
              </div>
            </div>
            </div>
           
              <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
              </a>
              <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
              </a>
        </div>
        <!--- Modal---------->
        <div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">
    
      <!-- Modal content-->
       <apex:form forceSSL="true" >
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Registration Form</h4>
        </div>
        <div class="modal-body">
          <p>
          
               <apex:outputPanel styleClass="form-group" layout="block">
                   <apex:inputText value="{!reguserFirstName}" html-placeholder="First Name" styleClass="form-control" />
               </apex:outputPanel>
               <apex:outputPanel styleClass="form-group" layout="block">
               <apex:inputText value="{!reguserLastName}" html-placeholder="Last Name" styleClass="form-control" />
               </apex:outputPanel>
               <apex:outputPanel styleClass="form-group" layout="block">
               <apex:inputText value="{!reguserEmail}" html-placeholder="Email" styleClass="form-control" />
               </apex:outputPanel>
               <apex:outputPanel styleClass="form-group" layout="block">
               <apex:inputSecret value="{!reguserPassword}" html-placeholder="Password" styleClass="form-control" />
               </apex:outputPanel>
               <apex:outputPanel styleClass="form-group" layout="block">
               <apex:inputSecret value="{!reguserConfPassword}" html-placeholder="Confirm Password" styleClass="form-control" />
               </apex:outputPanel>
          
          </p>
        </div>
        <div class="modal-footer">
          <!--<apex:form styleClass="btn-group">-->
          <!--<apex:commandButton value="Submit" action="{!registerUser}" styleClass="btn btn-info"/>-->
          <apex:commandButton value="Submit" styleClass="btn btn-info"/>
          <button type="button" class="btn form-btn" data-dismiss="modal">Close</button>
          <!--</apex:form>-->
        </div>
      </div>
      </apex:form>
    </div>
  </div>
   
        
        
        <apex:outputPanel styleClass="navbar navbar-inverse navbar-fixed-bottom" layout="block">
        
        </apex:outputPanel>
    </c:visualstrapblock>
    <script>
    $(function(){
   $('.carousel').carousel({
      interval: 3000,
      pause:"hover"
    });
  
    
});
    </script>
    <style>
   <!-- .carousel-inner
    {
           height:650px;
           width:100%;
    }-->
    

   
    </style>
</apex:page>